---
import { formatDate } from "../utils";
import Tag from "./Tag";
import { BASE_PATH } from "$consts";

interface Props {
  title: string;
  date: Date;
  updatedDate?: Date;
  tags?: string[];
}

const { title, date, updatedDate, tags } = Astro.props;
---

<div class="article-header">
  <h1>
    <a href={`${BASE_PATH}/`} class="home-link">{title}</a>
  </h1>
  <div class="date">
    <div> {formatDate(date)} </div>
    {updatedDate && (
      <div class="last-updated-on">
        <small> Updated on {formatDate(updatedDate)} </small>
      </div>
    )}
  </div>
  {tags && tags.length > 0 && (
    <div class="tags">
      {tags.map(tag => {
        return <Tag client:load tag={tag} />
      })}
    </div>
    
  )}
  <hr />
</div>

<style>
  .article-header {
    margin-bottom: 1em;
    padding: 1em 0;
    text-align: center;
    line-height: 1;
  }

  h1 {
    margin: 0 0 0.5em 0;
    text-align: center;
    letter-spacing: normal;
  }

  .home-link {
    color: inherit;
    text-decoration: none;
  }

  .home-link:hover,
  .home-link:focus-visible {
    text-decoration: underline;
  }

  .date {
    margin: 0.5em 0;
    color: rgb(var(--date-color));
    font-size: 0.9em;
  }

  .last-updated-on {
    margin-top: 0.3em;
  }

  .tags {
    margin: 1em 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
    justify-content: center;
  }
</style>